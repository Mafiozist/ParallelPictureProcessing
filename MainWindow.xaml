<Window x:Class="ParallelPictureProcessing.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ParallelPictureProcessing"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <StackPanel Orientation="Vertical" Margin="0,0,0,-6">
        <Grid RenderTransformOrigin="0.485,0.364" Height="434" Width="800">
            <StackPanel Margin="10,26,507,50" Orientation="Vertical">
                <Label Content="Original" Height="23" Width="52"/>
                <StackPanel Orientation="Horizontal">
                    <Label Content="Format:" Height="23" Width="52"/>
                    <Label x:Name="format"/>
                </StackPanel>
                <Image x:Name="originalImg" Height="258" Width="279" />
                <Button Click="SelectImage_Click" Content="Select image" Height="26" Width="80"/>
            </StackPanel>
            <StackPanel HorizontalAlignment="Left" Margin="400,26,0,0" Orientation="Vertical" VerticalAlignment="Top">
                <Label Content="Transformed" Height="23" Width="79"/>
                <Image x:Name="transformedImg" Height="302" Width="332"/>
            </StackPanel>
            <Button Margin="311,169,441,235" Content="Process" RenderTransformOrigin="2.042,1.036" Click="Process_Click"/>
        </Grid>
    </StackPanel>
</Window>
