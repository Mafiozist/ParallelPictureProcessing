<Window x:Class="ParallelPictureProcessing.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" xmlns:lvc="clr-namespace:LiveCharts.Wpf;assembly=LiveCharts.Wpf"
        mc:Ignorable="d"
        Title="MainWindow" Width="800" Height="700">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width=".30*"/>
            <ColumnDefinition Width=".07*"/>
            <ColumnDefinition Width=".45*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height=".6*"/>
            <RowDefinition  Height=".3*"/>
        </Grid.RowDefinitions>

        <StackPanel  Orientation="Vertical" Grid.Column="0" VerticalAlignment="Stretch">
            <Label Content="Original" MinHeight="23" MinWidth="52"/>
            <StackPanel  HorizontalAlignment="Left"  Orientation="Horizontal">
                <Label Content="Format:" Height="23" Width="52"/>
                <Label x:Name="format" />
            </StackPanel>
            <Image x:Name="originalImg" MinHeight="258" MinWidth="279" VerticalAlignment="Stretch"/>
            <Button Click="SelectImage_Click" Content="Select image" Height="26" Width="80" RenderOptions.BitmapScalingMode="HighQuality" Grid.Column="1"/>
        </StackPanel>
        <Button  Content="Process" Click="Process_Click" Width="48" VerticalAlignment="Stretch" Height="30" Grid.Column="1" />
        <StackPanel Orientation="Vertical"   Grid.Column="2">
            <Label Content="Transformed" Height="23" Width="79"/>
            <StackPanel  HorizontalAlignment="Left"  Orientation="Horizontal">
                <Label Content="Format:" Height="23" Width="52"/>
                <Label x:Name="transformedFormat" />
            </StackPanel>
            <ComboBox SelectionChanged="ColorSpace_SelectionChanged">
                <ComboBoxItem>0</ComboBoxItem>
                <ComboBoxItem>1</ComboBoxItem>
                <ComboBoxItem>2</ComboBoxItem>
            </ComboBox>
            <Button Click="Revert_Click" Content="Revert to Rgb"/>
            <Image x:Name="transformedImg" MinHeight="302" MinWidth="332" Stretch="Fill" VerticalAlignment="Stretch" RenderOptions.BitmapScalingMode="HighQuality"/>
        </StackPanel>
        <StackPanel Orientation="Vertical" Grid.Row="1" Margin="0,15,10,0" Grid.ColumnSpan="3">
            <ComboBox SelectionChanged="ChannelSelected_SelectionChanged">
                <ComboBoxItem>0</ComboBoxItem>
                <ComboBoxItem>1</ComboBoxItem>
                <ComboBoxItem>2</ComboBoxItem>
            </ComboBox>
            <lvc:CartesianChart Series="{Binding SeriesCollection}" LegendLocation="Bottom" VerticalAlignment="Stretch" MinHeight="200">
                <lvc:CartesianChart.AxisX>
                    <lvc:Axis  Labels="{Binding Labels}" MaxValue="256" MinValue="0"></lvc:Axis>
                </lvc:CartesianChart.AxisX>
                <lvc:CartesianChart.AxisY>
                    <lvc:Axis ></lvc:Axis>
                </lvc:CartesianChart.AxisY>
                <lvc:CartesianChart.DataTooltip>
                    <lvc:DefaultTooltip SelectionMode="SharedXValues"></lvc:DefaultTooltip>
                </lvc:CartesianChart.DataTooltip>
            </lvc:CartesianChart>
        </StackPanel>
    </Grid>


</Window>
