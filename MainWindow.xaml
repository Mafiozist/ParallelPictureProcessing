<Window x:Class="ParallelPictureProcessing.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="MainWindow" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width=".35*"/>
            <ColumnDefinition Width=".07*"/>
            <ColumnDefinition Width=".55*" />
            <ColumnDefinition Width=".10*" />
        </Grid.ColumnDefinitions>

        <StackPanel  Orientation="Vertical" Grid.Column="0" VerticalAlignment="Stretch">
            <Label Content="Original" MinHeight="23" MinWidth="52"/>
            <StackPanel  HorizontalAlignment="Left"  Orientation="Horizontal">
                <Label Content="Format:" Height="23" Width="52"/>
                <Label x:Name="format" />
            </StackPanel>
            <Image x:Name="originalImg" MinHeight="258" MinWidth="279" VerticalAlignment="Stretch"/>
            <Button Click="SelectImage_Click" Content="Select image" Height="26" Width="80" RenderOptions.BitmapScalingMode="HighQuality" Grid.Column="1"/>
        </StackPanel>
        <Button  Content="Process" Click="Process_Click" Width="48" VerticalAlignment="Stretch" Height="30" Grid.Column="1" />
        <StackPanel Orientation="Vertical"   Grid.Column="2">
            <Label Content="Transformed" Height="23" Width="79"/>
            <StackPanel  HorizontalAlignment="Left"  Orientation="Horizontal">
                <Label Content="Format:" Height="23" Width="52"/>
                <Label x:Name="transformedFormat" />
            </StackPanel>
            <ComboBox SelectionChanged="ColorSpace_SelectionChanged">
                <ComboBoxItem>0</ComboBoxItem>
                <ComboBoxItem>1</ComboBoxItem>
                <ComboBoxItem>2</ComboBoxItem>
            </ComboBox>
            <Image x:Name="transformedImg" MinHeight="302" MinWidth="332" Stretch="Fill" VerticalAlignment="Stretch" RenderOptions.BitmapScalingMode="HighQuality"/>
            <Button Click="Revert_Click">Revert to Rgb</Button>
        </StackPanel>
        
    </Grid>
    
    
</Window>
